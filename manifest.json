{
    "manifest_version": 3,
    "name": "kofi-md",
    "version": "1.0",
  
    "description": "Detect and Parse Md on kofi site",

    "host_permissions": [
        "https://ko-fi.com/Post/*",
        "*://*.example.org/*"
     ],

     "permissions": [
    "activeTab",
    "scripting"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["./dist/main.js"]
    }
  ],
  "action": {
    "default_popup": "popup/popup.html"

  }
  }
  